@model BlutChain.Models.Agendamento

@{
    ViewBag.Title = "RegistrarAgendamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agendar Doação</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Agendamento</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <b>Data do Agendamento: </b>
    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.DataAgendamento, new { htmlAttributes = new { @class = "form-control", @placeholder = "dd/mm/aa" } })
            @Html.ValidationMessageFor(model => model.DataAgendamento, "", new { @class = "text-danger" })
        </div>
    </div>

    <b>Horário do Agendamento: </b>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownList("HorarioAgendamento",  new List<SelectListItem>
            {
                new SelectListItem{ Text = "09:00", Value = "9:00"},
                new SelectListItem{ Text = "09:30", Value = "9:30"},
                new SelectListItem{ Text = "10:00", Value = "10:00"},
                new SelectListItem{ Text = "10:30", Value = "10:30"},
                new SelectListItem{ Text = "11:00", Value = "11:00"},
                new SelectListItem{ Text = "11:30", Value = "11:30"},
                new SelectListItem{ Text = "13:00", Value = "13:00"},
                new SelectListItem{ Text = "13:30", Value = "13:30"},
                new SelectListItem{ Text = "14:00", Value = "14:00"},
                new SelectListItem{ Text = "14:30", Value = "14:30"},
                new SelectListItem{ Text = "15:00", Value = "15:00"},
                new SelectListItem{ Text = "15:30", Value = "15:30"},
                new SelectListItem{ Text = "16:00", Value = "16:00"},
                new SelectListItem{ Text = "16:30", Value = "16:30"},
                new SelectListItem{ Text = "17:00", Value = "17:00"},
                new SelectListItem{ Text = "17:30", Value = "17:30"},
             } , "Selecione", new { @class = "form-control" })
        </div>
    </div>
    <!-- se horário não estiver ocupado, deixa marcar, ver o que fazer -->

    <b>Hemobanco desejado: </b>
    <div class="form-group">
        <div class="col-sm-10">
            @Html.DropDownList("Hemobancos", null,
                " -- SELECIONE -- ", new { @class = "form-control" })

            @* Passando as informações de endereço para a function codeAddress() no Layout para gerar o mapa com o marcador *@
            <input id="address" type="hidden" value="@Model.HemobancoAgendamento.Logradouro +  @Model.HemobancoAgendamento.Numero +
                   @Model.HemobancoAgendamento.Bairro + @Model.HemobancoAgendamento.Localidade + @Model.HemobancoAgendamento.CEP + 
                   @Model.HemobancoAgendamento.Uf">
            <div align="center">
                <div id="map-canvas" style="height:400px;width:100%;">
                </div>
            </div>


            @Html.ValidationMessageFor(model => model.HemobancoAgendamento, null,
                new { @class = "text-danger" })
        </div>
    </div>

    <!-- pegar dados do usuário via sessão -->

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Registrar" class="btn btn-default" />
        </div>
    </div>
</div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
