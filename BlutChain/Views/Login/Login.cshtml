@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <fieldset>
        <legend>Login</legend>
        @Html.AntiForgeryToken()

        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.Label("CPF / CNPJ")
                <div>
                    @Html.TextBox("CPF/CNPJ")
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Senha")
                <div>
                    @Html.Password("Senha")
                </div>
            </div>

            <div class="form-group">
                <div>
                    <input type="radio" name="usuario" id="radioDoador" value="1" />
                    @Html.Label("Doador")
                
                    <input type="radio" name="usuario" id="radioDoador" value="2" />
                    @Html.Label("Hemobanco")
                </div>
            </div>

            <div class="form-group">
                <div>
                    <input type="submit" value="Entrar" class="btn btn-success" />
                </div>
            </div>

        </div>
    </fieldset>

}

