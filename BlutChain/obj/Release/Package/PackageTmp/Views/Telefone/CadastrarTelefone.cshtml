@model BlutChain.Models.Telefone

@using (Html.BeginForm("CadastrarTelefone", "Telefone", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
<fieldset style="padding-top:85px">

    <legend>Cadastrar Telefone</legend>


    <br>
    <div style="padding-left:276px">
        <b>Tipo Telefone: </b>
        <div class="form-group">
            <div class="col-md-10" style="width:200px">
                @Html.DropDownList("Tipo",  new List<SelectListItem>
                {
                    new SelectListItem{ Text = "Residencial", Value = "Residencial"},
                    new SelectListItem{ Text = "Celular", Value = "Celular"}
                 } , "Selecione", new { @class = "form-control" })
            </div>
        </div>
        <br />
        <b>Número:</b>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control", @placeholder = "Número do Usuário" } })
                @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
            </div>
        </div>
        </div>
</fieldset>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Cadastrar"
                   class="btn btn-primary">
        </div>
    </div>
}

