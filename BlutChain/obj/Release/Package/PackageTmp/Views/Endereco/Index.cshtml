@using BlutChain.Models
@model List<Endereco>

@{
    DateTime data = ViewBag.Data;
}

<div>
    <h2>Gerenciamento de Endereços</h2>

    @Html.ActionLink("Cadastrar Endereço", "CadastrarEndereco", "Endereco")

    <table class="table table-hover table-striped"
           style="margin-top:30px">
        <tr>
            <th>Rua</th>
            <th>Número</th>
            <th>Bairro</th>
            <th>Localidade</th>
            <th>UF</th>
            <th>CEP</th>
            <th></th>
        </tr>
        @foreach (Endereco endereco in Model)
        {
        <tr>
            <td>@endereco.Logradouro </td>
            <td>@endereco.Numero</td>
            <td>@endereco.Bairro</td>
            <td>@endereco.Localidade</td>
            <td>@endereco.Uf</td>
            <td>@endereco.CEP</td>

            <td>
                @Html.ActionLink("Alterar", "AlterarEndereco", "Endereco",
                   new { id = endereco.IdEndereco }, null)
            </td>

            <td>
                @Html.ActionLink("Remover", "RemoverEndereco", "Endereco",
                new { id = endereco.IdEndereco }, null)
            </td>
        </tr>
        }
    </table>

    <p>Dados atualizados às: <b> @data </b></p>

</div>