@using BlutChain.Models
@model Endereco

<div>
    @using (Html.BeginForm("AlterarEndereco", "Endereco", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <fieldset>
            <legend>Editar Endereço</legend>
            @Html.ValidationSummary(true, null,
                 new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdEndereco)

            <div class="form-group">
                @Html.Label("CEP",
                 new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.CEP,
                 new
                 {
                     @class = "form-control",
                     @placeholder = "CEP"
                 })
                    @Html.ValidationMessageFor(model => model.CEP, null,
                 new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Buscar" class="btn btn-success" formaction="PesquisarCEP" formmethod="post" />
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Logradouro",
                 new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Logradouro,
                 new
                 {
                     @class = "form-control",
                     @placeholder = "Logradouro"
                 })
                    @Html.ValidationMessageFor(model => model.Logradouro, null,
                 new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Número Residência",
                 new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Numero,
                 new
                 {
                     @class = "form-control",
                     @placeholder = "Número Residência"
                 })
                    @Html.ValidationMessageFor(model => model.Numero, null,
                 new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Bairro",
                 new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Bairro,
                 new
                 {
                     @class = "form-control",
                     @placeholder = "Bairro"
                 })
                    @Html.ValidationMessageFor(model => model.Bairro, null,
                 new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Cidade",
                 new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Localidade,
                 new
                 {
                     @class = "form-control",
                     @placeholder = "Cidade"
                 })
                    @Html.ValidationMessageFor(model => model.Localidade, null,
                 new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Estado",
                 new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Uf,
                 new
                 {
                     @class = "form-control",
                     @placeholder = "Estado"
                 })
                    @Html.ValidationMessageFor(model => model.Uf, null,
                 new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Salvar"
                           class="btn btn-primary">
                </div>
            </div>
        </fieldset>

    }
</div>

<div>
            @Html.ActionLink("Voltar ao Menu", "Index")
</div>